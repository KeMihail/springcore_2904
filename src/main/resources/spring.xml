<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="consoleEventLogger" class="com.epam.spring.impl.ConsoleEventLogger"/>

    <bean id="client" class="com.epam.spring.impl.Client">
        <property name="id" value="1"/>
        <property name="fullName" value="Keiko Mihail"/>
    </bean>

    <bean id="app" class="com.epam.spring.impl.App">
        <property name="client" ref="client"/>
        <property name="eventLogger" ref="consoleEventLogger"/>
    </bean>

</beans>